	<% include includes/header.ejs %>
	<!--Body -->
	<div id="content">
		<div class="product_detail">
			<div class="container">
				<div class="col-md-4 col-lg-4 hinh_anh_chi_tiet">
					<img src="<%= content.avatarPath %>">
				</div>

				<div class="col-md-8 col-lg-8" id="thong_tin">
					<h2><%= content.name %></h2>
					<br>
					<div class="profile-detail">
						<div class="item">
							<div class="edit" data-info><i class="fa fa-pencil" aria-hidden="true"></i></div>
							<div class="col-xs-3 title">Email:</div>
							<div class="col-xs-9 info"><i><%= content.email %></i></div>
						</div>
						<div class="item">
							<div class="edit" data-info><i class="fa fa-pencil" aria-hidden="true"></i></div>
							<div class="col-xs-3 title">Số điện thoại:</div>
							<div class="col-xs-9 info"><i><%= content.phone %></i></div>
						</div>
						<div class="item">
							<div class="edit" data-info><i class="fa fa-pencil" aria-hidden="true"></i></div>
							<div class="col-xs-3 title">Địa chỉ:</div>
							<div class="col-xs-9 info"><i><%= content.address %></i></div>
						</div>
						<div class="item no-fix">
							<div class="col-xs-3 title">Ngày đăng ký:</div>
							<div class="col-xs-9 info"><i><%= content.dateAdded %></i></div>
						</div>
					</div>
				</div>
			</div>	
		</div>
		<div class="cart-pay">
			<div class="container">
				<div class="table-responsive list-cart">
					<table class="table table-hover bill-history">
						<thead>
							<tr>
								<th style="text-align: center;">STT</th>
								<th>Mã đơn hàng</th>
								<th>Ngày tạo</th>
								<th style="text-align: center;">Danh sách sản phẩm</th>
								<th style="text-align: center;">Tổng tiền</th>
								<th class="text-primary" style="text-align: center;">Đã thanh toán</th>
								<th class="text-success" style="text-align: center;">Đã giao</th>
							</tr>
						</thead>
						<tbody>
							<tr class="product-info" >
								<td class="stt">0</td>
								<td class="info">123</td>
								<td>12/12/2017</td>
								<td>
									<p>ádfs ad fasf</p>
									<p>ádfas ádfas df ád f</p>
								</td>
								<td class="total-cost">150,000 đ</td>
								<td style="text-align: center;">
									<i class="fa fa-check-square-o" aria-hidden="true"></i>
								</td>
								<td style="text-align: center;">
									<i class="fa fa-square-o" aria-hidden="true"></i>
								</td>
							</tr>
						</tbody>
					</table>
				</div>
				<div style="text-align: center"><a href="/pay/receiver-info" id="to-receiver-info" class="next-step" style="float: none">Xem thêm</a></div>
			</div>
		</div>
	</div>	
	<script type="text/javascript" src="/js/profile.js"></script>
		
