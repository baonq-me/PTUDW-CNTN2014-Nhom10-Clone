	<% include includes/header.ejs %>
	
	<div class="clearfix"></div>
		<div id="site-container" class="menu-full">

		<% include includes/sidebar.ejs %>

		<div class="content-footer" id="add-product">
			<div class="content">
				<div class="box">
					<div class="box-title">
						<h1>Thêm đơn hàng</h1>
						<a href="/admin/order" class="btn btn-primary">Quản lí đơn hàng</a>
					</div>
					<div class="box-content">
						<% if (message != "") { %>
							<div class="alert alert-danger fade in alert-dismissable">
							    <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
							    <strong>Lỗi!</strong> <%= message %>
							</div>
						<% } %>
						<div class="pull-right">
							<span id="total-price" style="font-size: 18px; margin: 10px 30px; color: red; font-weight: bold;">1234</span>
						</div>
						<!-- https://ps.w.org/woocommerce/assets/screenshot-2.png?rev=1063946 -->
						<!-- Responsive table -->
						<form id="account-profile" action="/admin/order/add" method="post">
							<table>
								<tbody>
									<tr>
										<th><label>Người đặt</label></th>
										<td>
											<input name="name" class="form-control" type="text" id="product-add-name" value="" required>
										</td>
									</tr>
									<tr>
										<th><label>Số điện thoại</label></th>
										<td>
											<input name="phone" class="form-control" type="text" id="product-add-name" value="">
										</td>
									</tr>
									<tr>
										<th><label>Địa chỉ</label></th>
										<td>
											<input name="address" class="form-control" type="text" id="product-add-name" value="">
										</td>
									</tr>
									<tr>
										<th><label for="product-add-groups">Sản phẩm</label></th>
										<td>
											<div class="product_set" style="overflow: auto;">
												<div class="col-sm-9" style="padding: 0px"> 
													<select name="product_0" class="category cat-group form-control col-sm-9">
														<option value="0">---</option>
														<% products.forEach(function(product){ %>
				<% var unitPrice = (product.newPrice && product.newPrice > 0) ? product.newPrice : product.price %>
															<option value="<%= product._id %>" data-name="<%= product.name %>" data-uniprice="<%= unitPrice %>"><%= product.name %></option>
														<% }) %>
													</select>
												</div>
												<div class="col-sm-3" style="padding-right: 0px"> <input type="number" name="count_product_0" class="form-control count_product" min="1" value="1" placeholder="Số lượng"></div>
											</div>
											<input type="hidden" name="count_line" value="1">
											<div style="text-align: center;">
												<div id="del_product"> Xóa</div>
												<div id="add_product"> Thêm</div>
											</div>
										</td>
									</tr>
									<tr>
										<th><label for="product-add-description">Tình trạng</label></th>
										<td>
											<div class="checkbox">
												<input type="checkbox" name="paid"> Đã thanh toán
											</div>
											<div class="checkbox">
												<input type="checkbox" name="delivered"> Đã giao hàng
											</div>
										</td>
									</tr>

								</tbody>
							</table>
							<input type="submit" class="btn btn-primary" value="Thêm sản phẩm">
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	<script type="text/javascript" src="/admin/js/admin.order.add.js"></script>
</body>
</html>
