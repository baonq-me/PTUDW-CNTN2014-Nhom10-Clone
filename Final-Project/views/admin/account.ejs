	<% include includes/header.ejs %>
	<div class="clearfix"></div>
		<div id="site-container" class="menu-full">
		<% include includes/sidebar.ejs %>
		<div class="content-footer">
			<div class="content">
				<div class="box">
					<div class="box-title">
						<!-- Modal box for adding new accounts -->
						<div id="account-modal" class="modal fade" role="dialog">
						  <div class="modal-dialog">

						    <!-- Modal content-->
								<form method="post" id="form-add-account" onsubmit="return false;" enctype="multipart/form-data" novalidate>
						    <div class="modal-content">
						      <div class="modal-header">
						        <button type="button" class="close" data-dismiss="modal">&times;</button>
						        <h4 class="modal-title">Thêm tài khoản</h4>
						      </div>
						      <div class="modal-body">

											<h2>Thông tin tài khoản</h2>
											<table>
												<tbody>
													<tr>
														<th><label for="username">Username (*)</label></th>
														<td>
															<input class="form-control" type="text" id="username" name="username" value="" required><br/>
														</td>
													</tr>
													<tr>
														<th><label for="fullname">Tên người dùng</label></th>
														<td><input class="form-control" type="text" id="fullname" name="fullname" value=""></td>
													</tr>
													<tr>
														<th><label for="avatar">Ảnh đại diện</label></th>
														<td>
															<div class="kv-avatar center-block text-center" style="width:200px">
																	<input id="avatar" name="avatar" type="file" class="file-loading" data-url="/admin/api/account/avatar/upload" multiple required>
															</div>
														</td>
													</tr>
												</tbody>
											</table>
											<h2>Thông tin liên lạc</h2>
											<table>
												<tbody>
													<tr>
														<th><label for="email">Email (*)</label></th>
														<td><input class="form-control" type="text" id="email" name="email" value="" required></td>
													</tr>
													<tr>
														<th><label for="phone">Điện thoại</label></th>
														<td><input class="form-control" type="text" id="phone" name="phone" value=""></td>
													</tr>
													<tr>
														<th><label for="address">Địa chỉ</label></th>
														<td><input class="form-control" type="text" id="address" name="address" value=""></td>
													</tr>
												</tbody>
											</table>
											<h2>Quản lí tài khoản</h2>
											<table>
												<tbody>
													<tr>
														<th><label for="role">Vai trò</label></th>
														<td>
															<div class="form-group">
															  <select class="form-control" id="role" name="role">
															    <option value="admin">Quản trị</option>
															    <option value="seller">Bán hàng</option>
															    <option value="customer">Mua hàng</option>
															  </select>
															</div>
														</td>
													</tr>
													<tr>
														<th><label for="password1">Mật khẩu (*)</label></th>
														<td>
															<p><input type="password" class="form-control" id="password1" name="password" placeholder="Mật khẩu" required></p>
															<p><input type="password" class="form-control" id="password2" placeholder="Nhập lại mật khẩu" required></p>
														</td>
													</tr>
												</tbody>
											</table>
										</form>
						      </div>
						      <div class="modal-footer">
										<button class="btn btn-primary" type="submit">Thêm tài khoản</button>
						        <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
						      </div>
						    </div>
								</form>
						  </div>
						</div>
						<h1>
							Tài khoản
							<button type="button" class="btn btn-default" data-toggle="modal" data-target="#account-modal">Thêm</button>
							<button type="button" class="btn btn-default" id="delete-account">Xóa</button>
							<button type="button" class="btn btn-default" id="edit-account" data-toggle="modal" data-target="#account-modal">Sửa</button>
						</h1>
						<hr/>
						<div class="product-info">
							<button type="button" class="btn btn-default">Tất cả</button>
							<button type="button" class="btn btn-default">Quản trị</button>
							<button type="button" class="btn btn-default">Mua hàng</button>
							<button type="button" class="btn btn-default">Bán hàng</button>

							<a href="admin.account.html" class="btn btn-default float-right">Tìm kiếm</a>
							<div class="col-xs-2 float-right">
								<input type="search" id="product-search" class="form-control">
							</div>
						</div>

						<!--<a href="admin.account.html" class="btn btn-default float-right">3</a>
						<a href="admin.account.html" class="btn btn-default float-right">2</a>
						<a href="admin.account.html" class="btn btn-default float-right">1</a>-->
						<div class="clear"></div>
					</div>

					<div class="box-content">
						<div style="overflow-x:auto;">
							<table class="account-table">
								<thead>
									<tr>
										<td style="width: 1%"><div class="checkbox"><label><input type="checkbox" id="checkAll"></label></div></td>
										<td style="width: 15%">Tài khoản</td>
										<td style="width: 15%">Tên đầy đủ</td>
										<td style="width: 5%">Email</td>
										<td style="width: 10%">Loại tài khoản</td>
										<td style="width: 10%">Thời gian</td>
									</tr>
								</thead>
								<tbody>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>

	<script type="text/javascript" src="/admin/js/notify.min.js"></script>
	<script type="text/javascript" src="/admin/js/fileinput.min.js"></script>
	<script type="text/javascript" src="/admin/js/jquery-confirm.min.js"></script>
	<script type="text/javascript" src="/admin/js/admin.account.js"></script>
	</div>
</body>
</html>
