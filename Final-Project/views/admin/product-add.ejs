	<% include includes/header.ejs %>
	
	<div class="clearfix"></div>
		<div id="site-container" class="menu-full">

		<% include includes/sidebar.ejs %>

		<div class="content-footer" id="add-product">
			<div class="content">
				<div class="box">
					<div class="box-title">
						<h1>Thêm sản phẩm</h1>
						<a href="/admin/product" class="btn btn-primary">Quản lí sản phẩm</a>
					</div>
					<div class="box-content">
						<!-- https://ps.w.org/woocommerce/assets/screenshot-2.png?rev=1063946 -->
						<!-- Responsive table -->
						<form id="account-profile" action="admin.products.html" method="post">
							<table>
								<tbody>
									<tr>
										<th><label for="product-add-name">Tên sản phẩm</label></th>
										<td>
											<input name="name" class="form-control" type="text" id="product-add-name" value="">
											<div style="color: red; display: none" id="err_name">Tên sản phẩm đã tồn tại</div>
										</td>
									</tr>
									<tr>
										<th><label for="product-add-name">Slug</label></th>
										<td>
											<input name="slug" class="form-control" type="text" id="product-add-name" value="">
											<div style="color: red; display: none" id="err_slug">Slug đã tồn tại</div>
										</td>
									</tr>
									<tr>
										<th><label for="product-add-name">Đơn giá</label></th>
										<td><input name="price" class="form-control" type="text" id="product-add-name" value=""></td>
									</tr>
									<tr>
										<th><label for="product-add-name">Giá khuyến mãi</label></th>
										<td><input name="newPrice" class="form-control" type="text" id="product-add-name" value=""></td>
									</tr>
									<tr>
										<th><label for="product-add-quantity">Số lượng</label></th>
										<td><input class="form-control" type="text" id="product-add-quantity" value=""></td>
									</tr>
									<tr>
										<th><label for="product-add-groups">Nhóm</label></th>
										<td>
											<select name="cat_0" class="category cat-group form-control">
												<option value="0">---</option>
												<% categories.forEach(function(category){ %>
													<option value="<%= category.slug %>"><%= category.name %></option>
												<% }) %>
											</select>
											<input type="hidden" name="count_cat" value="1">
											<div style="text-align: center;">
												<div id="del_cat"> Xóa</div>
												<div id="add_cat"> Thêm</div>
											</div>
										</td>
									</tr>
									<tr>
										<th><label for="product-add-image">Hình ảnh</label></th>
										<td><input id="image-upload" maxlength="20000" class="form-control" accept="image/*" type="file" id="product-add-image" value="">
										<div style="text-align: center; display: none;" id="display-image-upload"><img style="height: 100px" src=""></div></td>
									</tr>
									<tr>
										<th><label for="product-add-description">Mô tả</label></th>
										<td><input class="form-control" type="text" id="product-add-description" value=""></td>
									</tr>

								</tbody>
							</table>
							<input type="submit" class="btn btn-primary" value="Thêm sản phẩm">
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	<script type="text/javascript" src="/admin/js/admin.product.add.js"></script>
</body>
</html>
