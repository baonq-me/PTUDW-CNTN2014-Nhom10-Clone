	<% include ../includes/header.ejs %>
		
	<!--Body -->
	<div id="content">
		<div class="cart-pay">
			<div class="container">
				<ul class="tab-pay">
					<li><span>1</span><strong>Thông tin giỏ hàng</strong></li>
					<li class="active"><span>2</span><strong>Thông tin khách hàng</strong></li>
					<li><span>3</span><strong>Thông tin thanh toán</strong></li>
					<li><span>4</span><strong>Hoàn thành</strong></li>
				</ul>
				<form action="/pay/receiver-info" method="POST">
					<div class="form-receiver-info clearfix">
						<h3>Thông tin người nhận</h3>
						<div class="col-lg-6 col-sm-12 col-xs-12">
							<div class="form-group">
								<div class='input-group name'>
									<span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
									<input type='text' name="name" class="form-control" placeholder="Họ và Tên" required />
								</div>
								<div class='input-group phone'>
									<span class="input-group-addon"><span class="glyphicon glyphicon-phone"></span></span>
									<input type='text' name="phone" class="form-control" placeholder="Số điện thoại" required />
								</div>
								<div class='input-group date' id='datetimepicker1'>
									<span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
									<input type='datetime' name="date" class="form-control" placeholder="Ngày giờ giao hàng" required />
									<span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
								</div>
							</div>
						</div>
						<div class="col-lg-6 col-sm-12 col-xs-12">
							<div class="form-group add-info">
								<div class="warning">
									<span>Lưu ý: vui lòng chọn chính xác địa chỉ, để chúng tôi giao hàng nhanh.</span>
								</div>
								<div class="col-lg-12 col-sm-12 col-xs-12">
									<div class='input-group base-add'>
										<span class="input-group-addon"><span class="glyphicon glyphicon-map-marker"></span></span>
										<input type='text' name="address" class="form-control" placeholder="Địa chỉ" required />
									</div>
								</div>
								<div class="col-lg-6 col-sm-6 col-xs-6">
									<div class='input-group district-add'>
										<span class="input-group-addon"><span class="glyphicon glyphicon-map-marker"></span></span>
										<input type='text' name="district" class="form-control" placeholder="Quận/Huyện" required />
									</div>
								</div>
								<div class="col-lg-6 col-sm-6 col-xs-6">
									<div class='input-group city-add'>
										<span class="input-group-addon"></span>
										<input type='text' name="city" class="form-control" placeholder="Tỉnh" required />
									</div>
								</div>
							</div>
						</div>
					</div>
					<div><a href="cart-info.html" class="prev-step">Giỏ hàng</a></div>
					<input type="submit" value="Bước tiếp theo" class="next-step">
				</form>
				<script type="text/javascript">
					$(function () {
						$('#datetimepicker1').datetimepicker();
					});
				</script>
			</div>
		</div>
	</div>		
		
